{% style %}
  .multicolumn__wrapper{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding-top: 3.86vw;
    gap: 9.27vw;
  }
  .column{
    max-width: {{ section.settings.column_width | default: 380 }}px;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    flex: 1;
  }
  .column img{
    max-width: 100%;
    height: auto;
  }

  @media only screen and (max-width: 749px){
    .multicolumn__wrapper{
      flex-direction: column;
    }
    .column{
      margin-top: 30px!important;
    }
  }

  {% endstyle %}

<div class="dd-multicolumn page-width">
  {%- unless section.settings.heading == blank -%}
      <div class="title-wrapper--self-padded-mobile center">
          <h2 class="title">
          {{ section.settings.heading }}
          </h2>
      </div>
  {%- endunless -%}
  <div class="multicolumn__wrapper">
  {% for block in section.blocks %}
      <div class="column" style="margin-top: {{ block.settings.margin_top }}px;">
        {% if block.settings.image != blank %}
          {{ block.settings.image | image_url: width: 271 | image_tag }}     
        {% endif %}
          <p class="size-m">{{ block.settings.paragraph }}</p>
      </div>
    {% endfor %}
  </div>      
</div>

{% schema %}
{
"name": "Custom Multicolumn",
"settings": [
  {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading"
  },
  {
    "type": "number",
    "id": "column_width",
    "label": "Column Width"
  }
],
"blocks": [
  {
    "type": "column",
    "name": "Column",
    "settings": [
      {
        "id": "image",
        "type": "image_picker",
        "label": "Image"
      },
      {
        "id": "paragraph",
        "type": "text",
        "label": "Paragraph"
      },
      {
        "id": "margin_top",
        "type": "number",
        "label": "Margin Top (px)",
        "default": 0
      }
    ]
  }
],
"presets": [
  {
    "name": "Custom Multicolumn",
  }
]
}
{% endschema %}
